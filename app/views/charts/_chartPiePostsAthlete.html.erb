
  <div class="chartBox mx-auto">
    <canvas id="myChartPie"></canvas>
  </div>

  <% posts = @athlete.posts.count %>

  <% posts_without_media = @posts_without_media.count %>
  <% posts_with_images = @posts_with_images.count %>
  <% posts_with_videos = @posts_with_videos.count %>

  <% @data = [posts_without_media, posts_with_images, posts_with_videos] %>
  <% @nbTotal = @data.sum %>

<script>
  var couleur1 = 'rgb(116, 159, 130)';
  var couleur2 = 'rgb(66, 95, 87)';


   var dataPieResa = {
      labels: ['posts_text', 'posts_images', 'posts_videos'],
      datasets: [{
        data: <%= @data.to_json.html_safe %>,
        fill: true,
        backgroundColor: [ couleur1, couleur2 ],
        borderWidth: 1
      }]
    };

    var configPieResa = {
      type: 'doughnut',
          data: {
      labels: ['posts_text', 'posts_images', 'posts_videos'],
            datasets: [{
              data: <%= @data.to_json.html_safe %>,       
              backgroundColor: [ couleur1, couleur2 ],
              hoverOffset: 40,
              borderWidth: 1,
              cutout: '50%'
            }]
          },
          options: {
            animation: {
              animateRotate: true,
              duration: 5000
            },
            plugins: {
              legend: {
                display: true,
                position: 'top',
              },
            },

          },
         // plugins: [centerTextDoghnutResa]
        };

  var myChartResa = new Chart(
    document.getElementById('myChartPie'),
    configPieResa
  );

</script>

