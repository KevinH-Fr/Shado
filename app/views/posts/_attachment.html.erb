<div class="container-fluid">

    <% if post.media.attached? %>
        <% if post.media.image? %>
            <%= link_to image_tag(post.media, class:"rounded w-100"), post_path(post) %>
        <% elsif post.media.video? %> 
            <%= video_tag(url_for(post.media), class:"w-100", controls:"") %>
        <% end %>
    <% end %>

</div>