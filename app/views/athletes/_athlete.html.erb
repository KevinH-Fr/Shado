<div class="card card-main" id="<%= dom_id athlete %>">


  <p>
    <strong>Name:</strong>
    <%= athlete.name %>
  </p>

  <p>
    <strong>Discipline:</strong>
    <%= athlete.discipline %>
  </p>

  <p>
    <strong>Bio:</strong>
    <%= athlete.bio %>
  </p>

  <div class="flex-element m-1">
    <%= link_to "", athlete_path(athlete), class: "btn btn-sm btn-primary fa-solid fa-eye m-1" %>
    <%= link_to "Voir campaigns", campaigns_path(athlete_id: athlete), class: "btn btn-sm btn-warning fa-solid fa-star m-1" %>
  </div>

</div>
