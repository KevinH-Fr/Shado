<div class="image_wrapper">
  <div class="sized">
    <%= image_tag(athlete.panorama_pic, class: "panorama-img rounded-top") if athlete.panorama_pic.present? %> 
  </div>
</div>
<div class="profile-pic-overlay">
  <%= image_tag(athlete.profile_pic, class: "profile-pic") if athlete.profile_pic.present? %> 
</div>

<div class="card-body pt-5 profile-card-text">

  <%= form_with(model: athlete) do |form| %>
    <% if athlete.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(athlete.errors.count, "error") %> prohibited this athlete from being saved:</h2>

        <ul>
          <% athlete.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="input-group my-2">
      <%= form.label :name, class: "input-group-text label-with-format bg-secondary text-light" %>
      <%= form.text_field :name, class: "form-control field-with-format" %>
    </div>

    <div class="input-group my-2">
      <%= form.label :sport, class: "input-group-text label-with-format bg-secondary text-light" %>
      <%= form.select :sport_id, @sports.collect { |c| [c.name, c.id] }, 
              {include_blank: :true}, class: "form-select text-center" %>
    </div>

    <div class="input-group my-2">
      <%= form.label :bio, class: "input-group-text label-with-format bg-secondary text-light" %>
      <%= form.text_area :bio, class: "form-control field-with-format" %>
    </div>

    <div class="input-group my-2">
      <%= form.label :profile_pic %>
      <%= form.file_field :profile_pic %>
    </div>

    <div class="input-group my-2">
      <%= form.label :panorama_pic %>
      <%= form.file_field :panorama_pic %>
    </div>

    <div class="input-group my-2">
      <%#= form.text_field :user_id, value: current_user.id %>
    </div>

    <div class="container-fluid text-end mt-2 p-2"> 
      <button type="submit" class="btn btn-primary">
        <span><i class="bi bi-check"></i> Update</span>
      </button>
    </div>

  <% end %>
</div>