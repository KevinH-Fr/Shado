<div class="card card-main" id="<%= dom_id post %>">

  <p>
    <strong>Athlete:</strong>
    <%= athlete_full_name(post.athlete_id) %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= post.content %>
  </p>

  <p>
    <strong>exclusif:</strong>
    <%= post.exclusif %>
  </p>

    <%= image_tag(post.image1, class:"img-fluid rounded") if post.image1.present? %> 
    <%= video_tag(url_for(post.file), controls: true, class: "p-2") if post.file.present? %>


    <div class="flex-element m-1">
      <%= button_to "", post, method: :delete, class: "btn btn-sm btn-danger fa-solid fa-trash m-1" %>
      <%= link_to "", edit_post_path(post), 
            class: "btn btn-sm btn-secondary fa-solid fa-pen-to-square m-1", 
            method: :post %>
      <%= link_to "", post_path(post), class: "btn btn-sm btn-primary fa-solid fa-eye m-1" %>
    </div>

    <hr>  

    <%= button_to upvote_label(post, current_user), vote_post_path(post, type: :upvote), 
        method: :patch, 
        style: upvote_label_styles(post, current_user)  %>
    <%#= button_to downvote_label(post, current_user), vote_post_path(post, type: :downvote), 
        method: :patch, 
        style: downvote_label_styles(post, current_user)  %>

    <hr>


<%
=begin%>
     <% if comments_related(post).present? %>
      comments: <%= comments_related(post).count %> <br>
      <%#= render @comments %>

            <% comments_related(post).each do |comment| %>
              <%= comment.body %>
              <small> <%= time_ago_in_words(comment.created_at) %> ago </small>

              <%= link_to user_name(comment.user), comment.user %>
              <%= button_to 'Delete', [post, comment], method: :delete %>
              
              <%= link_to "delete comment", [post, comment], 
                method: :delete, class:"btn btn-sm btn-outline-danger fa-solid fa-trash"  %>

            <% end %>
    <% end %> 
<%
=end%>
      <% @comments = comments_related(post) %>
      <% if @comments.present? %>
      <%= render @comments %>
      <% end %>
    <%= link_to "add comment", new_post_comment_path(post, @comment) %>


</div>
