
<ul class="nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item" role="presentation">
    <button class="nav-link active" id="myAthletes-tab" data-bs-toggle="tab" data-bs-target="#myAthletes-tab-pane" 
      type="button" role="tab" aria-controls="myAthletes-tab-pane" aria-selected="true">
        My Athletes
    </button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link" id="allAthletes-tab" data-bs-toggle="tab" data-bs-target="#allAthletes-tab-pane" 
      type="button" role="tab" aria-controls="allAthletes-tab-pane" aria-selected="false">
        All Athletes
      </button>
  </li>
</ul>
