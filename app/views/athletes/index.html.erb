  <div class="tab-pane fade show active" id="myAthletes-tab-pane" role="tabpanel" aria-labelledby="myAthletes-tab" tabindex="0">
  
    <% if @athletes_suivis.present? %>
      <div id="athletes">
        <% @athletes_suivis.each do |athlete| %>
          <%= render athlete %>
        <% end %>
      </div>
    <% end %>

  </div>
  <div class="tab-pane fade" id="allAthletes-tab-pane" role="tabpanel" aria-labelledby="allAthletes-tab" tabindex="0">
    <div id="athletes">
      <% @athletes.each do |athlete| %>
        <%= render athlete %>
      <% end %>
    </div>
  </div>
</div>

